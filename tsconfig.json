{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "declaration": true,
    "sourceMap": true,
    "outFile": "./dist/index.js",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
