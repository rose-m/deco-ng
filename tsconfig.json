{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "dist/",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/index.d.ts",
    "src/**/*.spec.ts"
  ]
}
